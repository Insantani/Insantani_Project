<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
android:id="@+id/relativeLayoutFarmerProfile">

<android.support.design.widget.AppBarLayout
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginStart="48dp"
        app:expandedTitleMarginEnd="64dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:id="@+id/farmerPictureBackground"
            app:layout_collapseMode="parallax"
            >

            <ImageView
                android:id="@+id/farmerProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/shadow_background2">
                <TextView
                    android:id="@+id/farmerProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="2dp"
                    android:textColor="@color/insantaniWhite"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Farmer Name"
                    android:textSize="30dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RatingBar
                    android:id="@+id/farmerRating"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/farmerNumbeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/insantaniWhite"
                    android:text="4.5"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin" />

    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>

<android.support.v4.widget.NestedScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/farmerFollowButton"
            android:text="Follow"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="@color/insantaniWhite"
            android:background="@color/isantaniGreen"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:id="@+id/linearLayoutPhoneNumber">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PHONE NUMBER"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="left"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Farmer Name"
                    android:textSize="14dp"
                    android:id="@+id/farmerPhoneNumber"
                    android:autoLink="phone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:id="@+id/linearLayoutAddress">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ADDRESS"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="left"


                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ADDRESS"
                    android:textSize="14dp"
                    android:id="@+id/farmerAddress"
                    android:autoLink="phone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="E-MAIL"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="left"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="email"
                    android:textSize="14dp"
                    android:id="@+id/farmerEmail"
                    android:autoLink="email"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FARMER'S PHOTOS"
            android:textSize="15dp"
            android:layout_margin="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/farmerProfilePhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FARMER'S PRODUCTS"
            android:textSize="15dp"
            android:layout_margin="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            android:elevation="5dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/farmerProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>


