<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.williamhenry.insantani.FarmerProfileActivity"
    android:background="@color/WhiteBackground"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:id="@+id/farmerPictureBackground"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/farmerProfilePicture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="70dp"
                    android:scaleType="fitXY" />



                <TextView
                    android:id="@+id/farmerProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:text="Farmer Name"
                    android:textSize="30dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/farmerFollowButton"
                android:text="Follow"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/insantaniWhite"
                android:background="@color/insantaniGreen"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp">


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="PHONE NUMBER"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="left"

                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Farmer Name"
                        android:textSize="15dp"
                        android:id="@+id/farmerPhoneNumber" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp">


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ADDRESS"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="left"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ADDRESS"
                        android:textSize="15dp"
                        android:id="@+id/farmerAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp">


                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="E-MAIL"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="left"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="email"
                        android:textSize="15dp"
                        android:id="@+id/farmerEmail" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FARMER'S PHOTOS"
                android:textSize="15dp"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:elevation="5dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/farmerProfilePhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="FARMER'S PRODUCTS"
                android:textSize="15dp"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="20dp"
                android:elevation="5dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/farmerProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
