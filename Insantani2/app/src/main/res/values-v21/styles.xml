<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/insantaniGreen</item>
        <item name="android:colorPrimaryDark">@color/insantaniGreen2</item>
        <item name="android:colorAccent">@color/insantaniGreen</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>

</style>
    <style name="HomeTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/insantaniGreen</item>
        <item name="android:colorPrimaryDark">@color/insantaniGreen2</item>
        <item name="android:colorAccent">@color/insantaniGreen</item>
        <item name="android:textColorPrimary">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/insantaniGreen</item>

    </style>
    <style name="ProductTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/insantaniWhite</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="colorPrimary">@color/insantaniGreen</item>
        <item name="colorPrimaryDark">@color/insantaniGreen2</item>
        <item name="colorAccent">@color/insantaniGreen</item>
    </style>
    <style name="AppTheme.Tab" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/insantaniWhite</item>
        <item name="colorPrimary">@color/insantaniGreen</item>
        <item name="colorPrimaryDark">@color/insantaniGreen2</item>
        <item name="colorAccent">@color/insantaniGreen</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">#2196F3</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#689F38</item>
    </style>

</resources>
