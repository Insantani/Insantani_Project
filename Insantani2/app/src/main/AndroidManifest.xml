<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.williamhenry.insantani" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECIEVE"/>
    
    <permission android:name="com.williamhenry.insantani.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.williamhenry.insantani.permission.C2D_MESSAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductActivity"
            android:label="@string/title_activity_product"
            android:theme="@style/ProductTheme" >
        </activity>
        <activity
            android:name=".ArticleActivity"
            android:label="@string/title_activity_article"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Registration"
            android:label="@string/title_Register" >

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.williamhenry.insantani.MainActivity" /> -->
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Tab"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f7f1c4090211946353d160f416b2ad8544f63af3" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.williamhenry.insantani.MainActivity" />
        </activity>
        <activity
            android:name=".CheckoutActivity"
            android:theme="@style/CheckoutTheme" >
        </activity>
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service
            android:name="com.williamhenry.insantani.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.williamhenry.insantani.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <service
            android:name="com.williamhenry.insantani.RegistrationIntentService"
            android:exported="false">
        </service>
    </application>

</manifest>
