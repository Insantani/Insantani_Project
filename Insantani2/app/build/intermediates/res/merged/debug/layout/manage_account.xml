<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manageAccount">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#7ED321"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Leave it blank if nothing changes"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#757575"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/register_name_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_name"/>

                <EditText
                    android:id="@+id/fullnamemanage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:ems="10"
                    android:text=""
                    android:textSize="14dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_phone"
                    android:id="@+id/register_phoneNumber_icon"/>

                <EditText
                    android:id="@+id/enterphonenumbermanage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:ems="10"
                    android:text=""
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_address"
                    android:id="@+id/locationsymbol"/>

                <EditText
                    android:id="@+id/enteraddressmanage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:ems="10"
                    android:text=""
                    android:textSize="14dp"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="SAVE"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/saveButton"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="#7ED321"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>